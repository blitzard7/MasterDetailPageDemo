<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MasterDemo.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Username" />
            <Entry x:Name="usernameEntry" AutomationId="usernameEntry"/>
            <Label Text="Password" />
            <Entry x:Name="passwordEntry" IsPassword="true" AutomationId="passwordEntry"/>
            <Button Text="Login" Clicked="OnLoginButtonClicked" x:Name="loginButton"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>